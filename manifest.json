{
  "manifest_version": 3,
  "name": "Vela Docs Copier(简陋能用版本）",
  "version": "0.1.0",
  "description": "为什么微辣稻壳没有复制按钮！",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://iot.mi.com/vela/quickapp/*",
        "https://iot.mi.com/vela/quickapp/zh/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/content.css"]
    }
  ],
  "permissions": [
    "clipboardWrite",
    "activeTab"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/CheongSzesuen/VelaDocs/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/logo.png"],
      "matches": ["https://iot.mi.com/*"]
    }
  ],
  "action": {
    "default_title": "点击复制当前页文档",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "minimum_edge_version": "88.0.0"
}