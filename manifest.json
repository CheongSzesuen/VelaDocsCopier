{
  "manifest_version": 3,
  "name": "Vela Docs Copier",
  "version": "1.3",
  "description": "为什么微辣稻壳不能复制成Markdown？！",
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://iot.mi.com/vela/quickapp/*",
        "https://iot.mi.com/vela/quickapp/zh/*"
      ],
      "js": ["src/main.js"],
      "css": ["src/style.css"]
    }
  ],
  "permissions": [
    "clipboardWrite",
    "activeTab"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/CheongSzesuen/VelaDocs/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/logo.png"],
      "matches": ["https://iot.mi.com/*"]
    }
  ],
  "action": {
    "default_title": "Vela Docs Copier",
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
